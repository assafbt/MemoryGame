<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/Bright_Lavender"
    tools:context="com.assafbt.projects.memorygame.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_title1"
        android:id="@+id/MainTitle1"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_title2"
        android:id="@+id/MainTitle2"
        android:layout_below="@+id/MainTitle1"
        android:layout_centerHorizontal="true"/>
<!--

    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/ScoreList"
        android:layout_alignParentBottom="true">
-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/score1"
        android:id="@+id/best1Title"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/resetBTN"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00:00:00"
        android:id="@+id/best2View"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/best1View"
        android:layout_alignLeft="@+id/best1View"
        android:layout_alignStart="@+id/best1View" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/score2"
        android:id="@+id/best2Title"
        android:layout_alignTop="@+id/best2View"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/score3"
        android:id="@+id/best3Title"
        android:layout_alignTop="@+id/best3View"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="00:00:00"
            android:id="@+id/best1View"
            android:layout_alignTop="@+id/best1Title"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="00:00:00"
            android:id="@+id/best3View"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/best2View"
            android:layout_alignLeft="@+id/best2View"
            android:layout_alignStart="@+id/best2View" />

<!--
    </FrameLayout>
-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_score"
        android:id="@+id/resetBTN"
        android:background="@drawable/play_btn"
        android:layout_alignBottom="@+id/resetIMG"
        android:layout_toRightOf="@+id/resetIMG"
        android:layout_toEndOf="@+id/resetIMG"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_game"
        android:id="@+id/startBTN"
        android:background="@drawable/play_btn"
        android:layout_below="@+id/MainTitle2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_imgs"
        android:id="@+id/selectBTN"
        android:background="@drawable/play_btn"
        android:layout_alignBaseline="@+id/startBTN"
        android:layout_alignBottom="@+id/startBTN"
        android:layout_toRightOf="@+id/startBTN"
        android:layout_toEndOf="@+id/startBTN" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_imgs"
        android:id="@+id/resetIMG"
        android:background="@drawable/play_btn"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/startBTN"
        android:layout_toLeftOf="@+id/selectBTN"
        android:layout_toStartOf="@+id/selectBTN"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp" />


</RelativeLayout>
